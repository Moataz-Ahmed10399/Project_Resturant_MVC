@using Project_Resturant_MVC.ViewModel
@model VmMenuItem
@{
    ViewData["Title"] = "Update Menu Item";
}

<style>
    body {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        min-height: 100vh;
        padding: 40px 0;
    }

    .update-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .update-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        overflow: hidden;
        animation: slideUp 0.6s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card-header-custom {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 30px;
        text-align: center;
    }

        .card-header-custom h1 {
            margin: 0;
            font-size: 2rem;
            font-weight: 700;
        }

        .card-header-custom .icon {
            font-size: 3rem;
            margin-bottom: 10px;
            animation: rotate 3s linear infinite;
        }

    @@keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .form-container {
        padding: 40px;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    @@media (max-width: 768px) {
        .form-row

    {
        grid-template-columns: 1fr;
    }

    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        font-size: 0.95rem;
        display: block;
    }

    .form-control, .form-select {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: #f5576c;
            box-shadow: 0 0 0 0.2rem rgba(245, 87, 108, 0.25);
            transform: translateY(-2px);
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .btn-update {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        color: white;
        padding: 15px 30px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        width: 100%;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-update:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(245, 87, 108, 0.4);
        }

    .btn-back {
        background: #6c757d;
        border: none;
        color: white;
        padding: 12px 25px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 10px;
        width: 100%;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-back:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.4);
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 5px;
    }
</style>

<div class="update-container">
    <div class="update-card">
        <div class="card-header-custom">
            <div class="icon">🍽️</div>
            <h1>Update Menu Item</h1>
            <p class="mb-0">Modify menu item details</p>
        </div>

        <div class="form-container">
            <form asp-controller="MenuItem" asp-action="Update" asp-route-id="@ViewBag.MenuItemId" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@ViewBag.MenuItemId" />

                <div class="mb-4">
                    <label asp-for="Name" class="form-label">
                        🍕 Item Name
                    </label>
                    <input asp-for="Name" class="form-control" placeholder="Enter item name" value="@Model.Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label">
                        📝 Description
                    </label>
                    <textarea asp-for="Description" class="form-control" placeholder="Describe the dish...">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-row mb-4">
                    <div>
                        <label asp-for="Price" class="form-label">
                            💰 Price
                        </label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" value="@Model.Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div>
                        <label asp-for="Quantity" class="form-label">
                            📦 Quantity
                        </label>
                        <input asp-for="Quantity" class="form-control" type="number" placeholder="Available quantity" value="@Model.Quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row mb-4">
                    <div>
                        <label asp-for="PreparationTimeMinutes" class="form-label">
                            ⏱️ Prep Time (minutes)
                        </label>
                        <input asp-for="PreparationTimeMinutes" class="form-control" type="number" placeholder="15" value="@Model.PreparationTimeMinutes" />
                        <span asp-validation-for="PreparationTimeMinutes" class="text-danger"></span>
                    </div>

                    <div>
                        <label asp-for="CategoryId" class="form-label">
                            📂 Category
                        </label>
                        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-3">
                        <img src="~/@Model.ImagePath" alt="Current Image" style="max-width:180px;border-radius:10px;" />
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">Replace Image (optional)</label>
                    <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn-update">
                        ✅ Update Menu Item
                    </button>
                    <a asp-controller="MenuItem" asp-action="GetAllMenuItem" class="btn-back">
                        ⬅️ Back to Menu
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}