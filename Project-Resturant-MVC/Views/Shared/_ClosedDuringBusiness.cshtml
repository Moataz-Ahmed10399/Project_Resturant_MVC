@model (int StartHour, int EndHour, string? ReturnUrl)

<style>
    .closed-wrap {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);
        padding: 2rem;
        border-radius: 16px;
        color: #fff;
        box-shadow: 0 20px 60px rgba(0,0,0,.25)
    }

    .closed-card {
        max-width: 720px;
        width: 100%;
        background: #fff;
        border-radius: 16px;
        color: #2c3e50;
        box-shadow: 0 10px 30px rgba(0,0,0,.2);
        overflow: hidden
    }

    .closed-header {
        background: linear-gradient(135deg,#f093fb 0%,#f5576c 100%);
        color: #fff;
        padding: 1.75rem;
        text-align: center
    }

        .closed-header h2 {
            margin: 0;
            font-weight: 800
        }

    .closed-body {
        padding: 1.75rem
    }

    .hours-tag {
        display: inline-block;
        background: #eef2ff;
        color: #4f46e5;
        font-weight: 700;
        padding: .5rem 1rem;
        border-radius: 999px
    }

    .btns {
        display: flex;
        gap: .75rem;
        flex-wrap: wrap;
        margin-top: 1rem
    }

    .btn-main {
        padding: .75rem 1rem;
        border: none;
        border-radius: 10px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: .5rem
    }

    .btn-home {
        background: #4f46e5;
        color: #fff
    }

    .btn-try {
        background: #e5e7eb;
        color: #111
    }
</style>

<div class="closed-wrap">
    <div class="closed-card">
        <div class="closed-header">
            <h2>🚪 The restaurant is currently closed</h2>
            <div class="hours-tag">Working hours: @Model.StartHour:00 - @Model.EndHour:00</div>
        </div>
        <div class="closed-body">
            <p class="mb-3">
                We appreciate your visit! We are currently outside working hours. Please come back during the time mentioned above.
            </p>

            <div class="btns">
                <a class="btn-main btn-home" href="/">🏠 Home Page</a>
            
            </div>

            <hr class="my-3" />
            <small class="text-muted">If you are an employee with permissions, make sure you are logged in with the correct account.</small>
        </div>
    </div>
</div>
