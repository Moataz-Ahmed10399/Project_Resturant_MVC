                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        👨‍💼 Admin Panel
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="AdminOrdersDashboard">
                                                📊 Orders Dashboard
                                            </a>
                                        </li>
                                        <a class="dropdown-item" asp-controller="Analytics" asp-action="Dashboard">
                                            📈 Sales Dashboard
                                        </a>
                                        <li>
                                            <a class="dropdown-item" asp-controller="User" asp-action="GetAllUsers">
                                                👥 User Management
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Category" asp-action="Create">
                                                ➕ Add Category
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="MenuItem" asp-action="Create">
                                                ➕ Add Menu Item
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @* Kitchen Links *@
                            @if (User.IsInRole("Kitchen"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Order" asp-action="KitchenDashboard">
                                        👨‍🍳 Kitchen Dashboard
                                    </a>
                                </li>
                            }

                            @* Client Links *@
                            @if (User.IsInRole("Client"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        🛒 Orders
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="Create">
                                                ➕ Create Order
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="GetAllOrders">
                                                📋 My Orders
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @* User Profile *@
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <span class="user-badge">
                                        👤 @User.Identity.Name
                                        <span class="role-indicator">
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <text>Admin</text>
                                            }
                                            @if (User.IsInRole("Kitchen"))
                                            {
                                                <text>Kitchen</text>
                                            }
                                            @if (User.IsInRole("Client"))
                                            {
                                                <text>Client</text>
                                            }
                                        </span>
                                    </span>
                                </a>
                                <ul class="dropdown-menu">
                                  
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="SignOut">
                                            🚪 Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    🔐 Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    📝 Register
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                🔒 Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>🍽️ Restaurant MVC</h3>
                    <p style="color: rgba(255,255,255,0.7);">
                        Your complete restaurant management solution. Order, manage, and deliver with ease.
                    </p>
                    <div class="social-links">
                        <a href="#" title="Facebook">📘</a>
                        <a href="#" title="Twitter">🐦</a>
                        <a href="#" title="Instagram">📷</a>
