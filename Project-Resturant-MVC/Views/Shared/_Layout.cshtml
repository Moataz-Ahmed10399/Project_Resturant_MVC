                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MenuItem" asp-action="GetAllMenuItem">
                                    🍕 Menu
                                </a>
                            </li>

                            @* Admin Links *@
                            @if (User.IsInRole("Admin"))
                            {
