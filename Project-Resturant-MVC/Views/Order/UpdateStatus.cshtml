@model Order
@{
    ViewData["Title"] = "Update Order Status";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">🔄 Update Order Status</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4>Order #@Model.Id</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Customer:</strong> @Model.CustomerName</p>
                    <p><strong>Phone:</strong> @Model.CustomerPhone</p>
                    <p><strong>Type:</strong> @Model.Type</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
                    <p><strong>Created:</strong> @Model.CreatedAt.ToString("g")</p>
                    <p>
                        <strong>Current Status:</strong>
                        <span class="badge
                            @(Model.Status == OrderStatus.Delivered ? "bg-success" :
                                                            Model.Status == OrderStatus.Ready ? "bg-info" :
                                                            Model.Status == OrderStatus.Preparing ? "bg-warning text-dark" :
                                                            "bg-secondary")">
                            @Model.Status
                        </span>
                    </p>
                </div>
            </div>

            <hr />

            <h5>Order Items:</h5>
            <ul>
                @foreach (var item in Model.OrderItems)
                {
                    <li>@item.MenuItem.Name x @item.Quantity (@item.MenuItem.PreparationTimeMinutes min)</li>
                }
            </ul>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5>Update Status:</h5>
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="d-grid gap-2">
                    @if (Model.Status == OrderStatus.Pending)
                    {
                        <button type="submit" name="newStatus" value="@((int)OrderStatus.Preparing)"
                                class="btn btn-warning btn-lg">
                            ➡️ Start Preparing
                        </button>
                    }

                    @if (Model.Status == OrderStatus.Preparing)
                    {
                        <button type="submit" name="newStatus" value="@((int)OrderStatus.Ready)"
                                class="btn btn-info btn-lg">
                            ✅ Mark as Ready
                        </button>
                    }

                    @if (Model.Status == OrderStatus.Ready)
                    {
                        <button type="submit" name="newStatus" value="@((int)OrderStatus.Delivered)"
                                class="btn btn-success btn-lg">
                            🚚 Mark as Delivered
                        </button>
                    }

                    @if (Model.Status == OrderStatus.Pending || Model.Status == OrderStatus.Preparing)
                    {
                        <button type="submit" name="newStatus" value="@((int)OrderStatus.Cancelled)"
                                class="btn btn-danger btn-lg">
                            ❌ Cancel Order
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="KitchenDashboard" class="btn btn-secondary">⬅️ Back to Kitchen</a>
    </div>
</div>