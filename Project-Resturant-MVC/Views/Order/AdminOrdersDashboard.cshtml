
@model List<Order>
@{
    ViewData["Title"] = "Admin Orders Dashboard";
}

<style>
    .admin-dashboard {
        padding: 2rem 0;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2.5rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.3);
    }

        .dashboard-header h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .dashboard-header p {
            opacity: 0.95;
            margin: 0;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        border-left: 5px solid;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        }

        .stat-card.pending {
            border-left-color: #6c757d;
        }

        .stat-card.preparing {
            border-left-color: #ffc107;
        }

        .stat-card.ready {
            border-left-color: #17a2b8;
        }

        .stat-card.delivered {
            border-left-color: #28a745;
        }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .stat-number {
        font-size: 2.8rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 0.3rem;
    }

    .stat-label {
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .stat-revenue {
        color: #28a745;
        font-size: 1.2rem;
        font-weight: bold;
        margin-top: 0.5rem;
    }

    .orders-table-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f8f9fa;
    }

        .table-header h4 {
            color: #2c3e50;
            font-weight: bold;
            margin: 0;
        }

    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-modern thead th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            border: none;
        }

            .table-modern thead th:first-child {
                border-top-left-radius: 10px;
            }

            .table-modern thead th:last-child {
                border-top-right-radius: 10px;
            }

        .table-modern tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid #f8f9fa;
        }

            .table-modern tbody tr:hover {
                background: #f8f9fa;
                transform: scale(1.01);
                box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            }

        .table-modern tbody td {
            padding: 1.2rem 1rem;
            vertical-align: middle;
            color: #495057;
        }

    .customer-info {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }

    .customer-name {
        font-weight: 600;
        color: #2c3e50;
    }

    .customer-username {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .badge-type {
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .badge-delivery {
        background: #cfe2ff;
        color: #084298;
    }

    .badge-takeaway {
        background: #d1ecf1;
        color: #0c5460;
    }

    .badge-dinein {
        background: #d4edda;
        color: #155724;
    }

    .badge-status {
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .status-delivered {
        background: #d4edda;
        color: #155724;
    }

    .status-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .status-ready {
        background: #d1ecf1;
        color: #0c5460;
    }

    .status-preparing {
        background: #fff3cd;
        color: #856404;
    }

    .status-pending {
        background: #e2e3e5;
        color: #383d41;
    }

    .btn-view {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 0.5rem 1.2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .btn-view:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(79, 172, 254, 0.3);
            color: white;
        }

    .empty-orders {
        text-align: center;
        padding: 3rem;
        color: #6c757d;
    }

    .empty-orders-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        padding: 0.8rem 1.8rem;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
        margin-top: 1.5rem;
    }

        .btn-back:hover {
            background: #5a6268;
            transform: translateY(-2px);
            color: white;
        }
</style>

<div class="admin-dashboard container-fluid">
    <div class="dashboard-header">
        <h1>📊 Admin Orders Dashboard</h1>
        <p>Monitor and track all restaurant orders in real-time</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <strong>✅ Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card pending">
            <div class="stat-icon">📋</div>
            <div class="stat-number">@ViewBag.PendingCount</div>
            <div class="stat-label">Pending Orders</div>
        </div>
        <div class="stat-card preparing">
            <div class="stat-icon">🔥</div>
            <div class="stat-number">@ViewBag.PreparingCount</div>
            <div class="stat-label">Preparing</div>
        </div>
        <div class="stat-card ready">
            <div class="stat-icon">✅</div>
            <div class="stat-number">@ViewBag.ReadyCount</div>
            <div class="stat-label">Ready Orders</div>
        </div>
        <div class="stat-card delivered">
            <div class="stat-icon">🚚</div>
            <div class="stat-number">@ViewBag.DeliveredCount</div>
            <div class="stat-label">Delivered</div>
            <div class="stat-revenue">@ViewBag.TotalRevenue.ToString("C")</div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="orders-table-card">
        <div class="table-header">
            <h4>📦 All Orders</h4>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table-modern">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Customer</th>
                            <th>Phone</th>
                            <th>Type</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Ready At</th>
                            <th>Delivered</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.Id</strong></td>
                                <td>
                                    <div class="customer-info">
                                        <span class="customer-name">@order.CustomerName</span>
                                        <span class="customer-username">@order.User?.UserName</span>
                                    </div>
                                </td>
                                <td>@order.CustomerPhone</td>
                                <td>
                                    <span class="badge-type
                                                @(order.Type == OrderType.Delivery ? "badge-delivery" :
                                                                                    order.Type == OrderType.Takeaway ? "badge-takeaway" : "badge-dinein")">
                                                                                                                                                       @order.Type
                                                                                                                                                   </span>
                                                                                                                                               </td>
                                                                                                                                               <td><strong>@order.Total.ToString("C")</strong></td>
                                                                                                                                               <td>
                                                                                                                                                   <span class="badge-status
                                                @(order.Status == OrderStatus.Delivered ? "status-delivered" :
                                                                                    order.Status == OrderStatus.Cancelled ? "status-cancelled" :
                                                                                    order.Status == OrderStatus.Ready ? "status-ready" :
                                                                                    order.Status == OrderStatus.Preparing ? "status-preparing" : "status-pending")">
                                @order.Status
                            </span>
                        </td>
                        <td>@order.CreatedAt.ToString("g")</td>
                        <td>@(order.ReadyAt?.ToString("g") ?? "-")</td>
                        <td>@(order.DeliveredAt?.ToString("g") ?? "-")</td>
                        <td>
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn-view">👁️ View</a>

                        </td>
                    </tr>
                                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-orders">
                <div class="empty-orders-icon">📦</div>
                <h4>No Orders Found</h4>
                <p>There are no orders in the system yet.</p>
            </div>
        }
    </div>

    <a asp-controller="Order" asp-action="adminordersdashboard" class="btn-back">
        ⬅️ Back to Orders Dashboard
    </a>
</div>