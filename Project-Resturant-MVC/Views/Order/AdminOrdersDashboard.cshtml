@model List<Order>
@{
    ViewData["Title"] = "Admin Orders Dashboard";
}

<div class="container-fluid mt-4">
    <h1 class="text-center text-danger mb-4">📊 Admin Orders Dashboard (Read-Only)</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h2>@ViewBag.PendingCount</h2>
                    <p>Pending Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h2>@ViewBag.PreparingCount</h2>
                    <p>Preparing Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h2>@ViewBag.ReadyCount</h2>
                    <p>Ready Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h2>@ViewBag.DeliveredCount</h2>
                    <p>Delivered</p>
                    <small>Revenue: @ViewBag.TotalRevenue.ToString("C")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4>All Orders</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Customer</th>
                        <th>Phone</th>
                        <th>Type</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Ready At</th>
                        <th>Delivered At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>
                                    @order.CustomerName
                                    <br />
                                    <small class="text-muted">@order.User?.UserName</small>
                                </td>
                                <td>@order.CustomerPhone</td>
                                <td>
                                    <span class="badge
                                                @(order.Type == OrderType.Delivery ? "bg-primary" :
                                                                                    order.Type == OrderType.Takeaway ? "bg-info" :
                                                                                    "bg-secondary")">
                                                                                                 @order.Type
                                                                                             </span>
                                                                                         </td>
                                                                                         <td><strong>@order.Total.ToString("C")</strong></td>
                                                                                         <td>
                                                                                             <span class="badge
                                                @(order.Status == OrderStatus.Delivered ? "bg-success" :
                                                                                    order.Status == OrderStatus.Cancelled ? "bg-danger" :
                                                                                    order.Status == OrderStatus.Ready ? "bg-info" :
                                                                                    order.Status == OrderStatus.Preparing ? "bg-warning text-dark" :
                                                                                    "bg-secondary")">
                                @order.Status
                            </span>
                        </td>
                        <td>@order.CreatedAt.ToString("g")</td>
                        <td>@(order.ReadyAt?.ToString("g") ?? "-")</td>
                        <td>@(order.DeliveredAt?.ToString("g") ?? "-")</td>
                        <td>
                            <a href="/Order/Details/@order.Id" class="btn btn-sm btn-info">
                                👁️ View
                            </a>
                        </td>
                    </tr>
                                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center text-muted">No orders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
</div>