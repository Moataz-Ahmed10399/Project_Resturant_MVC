

@model List<Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">📦 My Orders</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-controller="Order" asp-action="Create" class="btn btn-success">➕ Create New Order</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-header
                                    @(order.Status == OrderStatus.Delivered ? "bg-success text-white" :
                                                           order.Status == OrderStatus.Cancelled ? "bg-danger text-white" :
                                                           order.Status == OrderStatus.Ready ? "bg-info text-white" :
                                                           order.Status == OrderStatus.Preparing ? "bg-warning" :
                                                           "bg-secondary text-white")">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Order #@order.Id</h5>
                        <span class="badge bg-dark">@order.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Type:</strong> @order.Type</p>
                    <p class="mb-1"><strong>Total:</strong> @order.Total.ToString("C")</p>
                    <p class="mb-1"><strong>Created:</strong> @order.CreatedAt.ToString("g")</p>

                    @if (order.EstimatedDeliveryMinutes.HasValue)
                            {
                                <p class="mb-1">
                                    <strong>Est. Delivery:</strong> @order.EstimatedDeliveryMinutes min
                                </p>
                            }

                            @if (order.ReadyAt.HasValue)
                            {
                                <p class="mb-1 text-info">
                                    <strong>Ready At:</strong> @order.ReadyAt.Value.ToString("g")
                                </p>
                            }

                            @if (order.DeliveredAt.HasValue)
                            {
                                <p class="mb-1 text-success">
                                    <strong>Delivered At:</strong> @order.DeliveredAt.Value.ToString("g")
                                </p>
                            }

                            <hr />

                            <h6>Items:</h6>
                            <ul class="mb-2">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>@item.MenuItem.Name x @item.Quantity</li>
                                }
                            </ul>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">👁️ Details</a>


                                @if (order.Status == OrderStatus.Pending)
                                {
                                    <a asp-controller="Order" asp-action="Update" asp-route-id="@order.Id" class="btn btn-sm btn-primary">✏️ Edit</a>

                                    <form asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Cancel this order?')">❌ Cancel</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No orders found</h4>
            <p>You haven't placed any orders yet.</p>
            <a href="/Order/Create" class="btn btn-success">Place Your First Order</a>
        </div>
    }
</div>