            <form asp-controller="User" asp-action="ChangeRole" asp-route-userId="@ViewBag.UserId" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" value="@ViewBag.UserId" />

                <div class="mb-3">
                    <label class="form-label"><strong>Select New Role:</strong></label>
                    <select name="newRole" class="form-select" required>
                        <option value="">-- Choose Role --</option>
                        @foreach (var role in ViewBag.AllRoles as SelectList)
                        {
                            <option value="@role.Text">@role.Text</option>
                        }
                    </select>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">✅ Change Role</button>
                    <a asp-controller="User" asp-action="GetAllUsers" class="btn btn-secondary">Cancel</a>
                </div>
            </form>



