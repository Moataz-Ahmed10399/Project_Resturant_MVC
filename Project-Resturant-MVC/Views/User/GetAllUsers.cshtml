@model List<(ApplicationUser User, string Role)>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">👥 Manage Users</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Address</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User.UserName</td>
                    <td>@item.User.Email</td>
                    <td>@item.User.Address</td>
                    <td>
                        <span class="badge
                                @(item.Role == "Admin" ? "bg-danger" :
                                                            item.Role == "Kitchen" ? "bg-warning text-dark" :
                                                            item.Role == "Client" ? "bg-primary" :
                                                            "bg-secondary")">
                        @item.Role
                    </span>
                </td>
                <td>
                    <a href="/User/ChangeRole?userId=@item.User.Id" class="btn btn-sm btn-primary">
                        Change Role
                    </a>

                    @if (item.User.UserName != "admin")
                        {
                            <form asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@item.User.Id" />
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this user?')">
                                    Delete
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
</div>