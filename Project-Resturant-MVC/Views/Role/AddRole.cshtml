@model Project_Resturant_MVC.ViewModel.RoleVm
@{
    ViewData["Title"] = "Add New Role";
}

<style>
    /* اعزل الستايل جوه .role-page بدل body عشان ميتخانقش مع _Layout */
    .role-page {
        min-height: calc(100vh - 200px);
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .role-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.2);
        overflow: hidden;
        width: 100%;
        max-width: 650px;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 32px;
        text-align: center;
    }

        .card-header-custom .icon {
            font-size: 3rem;
            margin-bottom: 8px;
        }

    .form-container {
        padding: 28px;
    }

    .info-box {
        background: #e7f3ff;
        border-left: 4px solid #667eea;
        padding: 12px 14px;
        border-radius: 10px;
        margin-bottom: 18px;
        color: #333;
        font-size: .95rem;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .form-control {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 14px;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102,126,234,.25);
        }

    .role-suggestions {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        gap: 10px;
        margin-top: 10px;
        margin-bottom: 16px;
    }

    .role-suggestion {
        background: #f8f9fa;
        border: 2px solid #e0e0e0;
        padding: 10px;
        border-radius: 10px;
        text-align: center;
        cursor: pointer;
        font-weight: 600;
        color: #666;
        transition: .2s;
    }

        .role-suggestion:hover {
            background: #667eea;
            border-color: #667eea;
            color: #fff;
        }

    .btn-create {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 12px 20px;
        font-weight: 700;
        border-radius: 10px;
        width: 100%;
    }

    .btn-back {
        background: #6c757d;
        color: #fff;
        padding: 10px 16px;
        border-radius: 10px;
        width: 100%;
        text-align: center;
        display: block;
        text-decoration: none;
        margin-top: 10px;
    }

        .btn-back:hover {
            background: #5a6268;
            color: #fff;
        }
</style>

<div class="role-page">
    <div class="role-card">
        <div class="card-header-custom">
            <div class="icon">🎭</div>
            <h1 class="h4 m-0">Add New Role</h1>
            <div class="small opacity-75 mt-1">Create a new role for the system</div>
        </div>

        <div class="form-container">
            @if (ViewBag.Success == true)
            {
                <div class="alert alert-success">✅ Role created successfully.</div>
            }

            <div class="info-box">
                <strong>Note:</strong> Role names should be descriptive (e.g., Admin, Manager, Supervisor).
            </div>

            <form asp-action="AddRole" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-2"></div>

                <label asp-for="RoleName" class="form-label">Role Name</label>
                <input asp-for="RoleName" class="form-control" placeholder="e.g., Manager, Supervisor" />
                <span asp-validation-for="RoleName" class="text-danger small"></span>

                <div class="role-suggestions">
                    <div class="role-suggestion" onclick="document.querySelector('input[name=RoleName]').value='Manager'">Manager</div>
                    <div class="role-suggestion" onclick="document.querySelector('input[name=RoleName]').value='Supervisor'">Supervisor</div>
                    <div class="role-suggestion" onclick="document.querySelector('input[name=RoleName]').value='Waiter'">Waiter</div>
                </div>

                <button type="submit" class="btn-create">✅ Create Role</button>
                <a asp-controller="User" asp-action="GetAllUsers" class="btn-back">⬅️ Back to Users</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
